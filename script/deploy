#!/bin/sh
ssh ubuntu@13.124.150.142 <<EOF
  source /etc/profile.d/env.sh
  echo "> PORT : $PORT"
  echo "> SECRET_KEY : $SECRET_KEY"
  echo "> SALT : $SALT"
  echo "> NODE_ENV : $NODE_ENV"
  echo "> DB_HOST : $DB_HOST"
  echo "> DB_USER : $DB_USER"
  echo "> DB_PW : $DB_PW"
  echo "> DB_NAME : $DB_NAME"
  echo "> REDIS_HOST : $REDIS_HOST"
  echo "> REDIS_PORT : $REDIS_PORT"
  sudo docker pull hch950627/chang:2.0
  sudo docker image prune -f
  sudo docker kill antsori
  sudo docker rm antsori
  sudo docker run -p 3000:3000 --name antsori -it -d hch950627/chang:2.0 -e PORT=$PORT -e SECRET_KEY=$SECRET_KEY -e SALT=$SALT -e NODE_ENV=$NODE_ENV -e DB_HOST=$DB_HOST -e DB_PW=$DB_PW -e DB_NAME=$DB_NAME -e REDIS_HOST=$REDIS_HOST -e REDIS_PORT=$REDIS_PORT
  exit 
EOF
